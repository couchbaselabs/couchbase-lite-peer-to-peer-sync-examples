<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ListSync" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/orange_A400</item>
        <item name="colorPrimaryVariant">@color/khaki</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/red_500</item>
        <item name="colorSecondaryVariant">@color/pink_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>
    </style>

    <style name="Theme.ListSync.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ListSync.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.ListSync.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.ListSync.BottomNav">
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="itemBackground">?android:attr/windowBackground</item>
        <item name="itemIconTint">@color/color_p2p_bottom_nav</item>
        <item name="itemTextColor">@color/color_p2p_bottom_nav</item>
    </style>

    <style name="ListSync.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:paddingStart">@dimen/button_pad_horizontal</item>
        <item name="android:paddingEnd">@dimen/button_pad_horizontal</item>
        <item name="android:layout_margin">@dimen/frame_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_mid</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ListSync.Button.Login">
        <item name="android:background">@drawable/background_login_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ListSync.Button.Start">
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:paddingTop">@dimen/button_pad_vertical</item>
        <item name="android:paddingBottom">@dimen/button_pad_vertical</item>
        <item name="android:background">@drawable/background_start_button</item>
        <item name="android:textColor">@color/color_button_text</item>
    </style>

    <style name="ListSync.Button.Stop">
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:paddingTop">@dimen/button_pad_vertical</item>
        <item name="android:paddingBottom">@dimen/button_pad_vertical</item>
        <item name="android:background">@drawable/background_stop_button</item>
        <item name="android:textColor">@color/color_button_text</item>
    </style>

    <style name="Text">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/text_mid</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Text.Bright">
        <item name="android:textColor">@color/red_A100</item>
        <item name="android:textSize">@dimen/text_mid</item>
    </style>

    <style name="Text.Center">
        <item name="android:gravity">center</item>
    </style>

    <style name="Text.Label">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Small">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.Tiny">
        <item name="android:textSize">@dimen/text_tiny</item>
    </style>

    <style name="Text.Small.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Tiny.Caps">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Text.Small.Light">
        <item name="android:textColor">@color/light_grey</item>
    </style>

</resources>