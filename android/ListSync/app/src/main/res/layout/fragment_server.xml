<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/frame_margin"
    tools:context=".ui.p2p.server.ServerFragment"
    >

    <Button
        android:id="@+id/start"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/host"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stop"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.60"
        android:text="@string/start_server"
        style="@style/ListSync.Button.Start"
        />

    <Button
        android:id="@+id/stop"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/start"
        app:layout_constraintStart_toEndOf="@+id/start"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/stop_server"
        style="@style/ListSync.Button.Stop"
        android:enabled="false"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintGuide_percent="0.7"
        android:orientation="vertical"
        />

    <TextView
        android:id="@+id/host"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/start"
        app:layout_constraintBottom_toTopOf="@+id/uri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        android:layout_margin="@dimen/frame_margin"
        style="@style/Text"
        />

    <TextView
        android:id="@+id/port"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/host"
        app:layout_constraintStart_toEndOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/frame_margin"
        style="@style/Text"
        />

    <TextView
        android:id="@+id/uri"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/host"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/textbox_pad"
        android:layout_margin="@dimen/frame_margin"
        android:textColor="@color/mid_grey"
        style="@style/Text.Small"
        />

</androidx.constraintlayout.widget.ConstraintLayout>